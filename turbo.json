{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["build/**", "dist/**", "out/**"]
    },
    "check:types": { "dependsOn": ["^check:types"] },
    "dev": { "cache": false, "persistent": true },
    "test": { "cache": false },
    "test:coverage": { "cache": false },
    "test:watch": { "cache": false, "persistent": true },
    "//#check": {},
    "//#check:fix": {},
    "sync:dockerhub-readme": {
      "inputs": ["README.md"],
      "env": ["DOCKERHUB_USERNAME", "DOCKERHUB_TOKEN"]
    },
    "publish:docker": { "cache": false }
  }
}
